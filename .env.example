# OAuth 2.1 Configuration for Microsoft Teams MCP
# Copy this to .env and update with your Microsoft OAuth credentials

# Required: Microsoft OAuth 2.0/2.1 Client Credentials
MICROSOFT_OAUTH_CLIENT_ID=your_client_id_here
MICROSOFT_OAUTH_CLIENT_SECRET=your_client_secret_here
MICROSOFT_TENANT_ID=common  # Use 'common' for multi-tenant or specific tenant ID

# OAuth 2.1 Settings
MCP_ENABLE_OAUTH21=true
OAUTH2_ALLOW_INSECURE_TRANSPORT=true  # Allow HTTP for development
OAUTH2_ENABLE_DEBUG=false  # Enable debug for troubleshooting

# Server Configuration
TEAMS_MCP_BASE_URI=http://localhost
TEAMS_MCP_PORT=8003

# Microsoft OAuth Redirect URI (must match Azure AD app registration exactly)
MICROSOFT_OAUTH_REDIRECT_URI=http://localhost:8003/callback

# Development Settings
SKIP_AUTH=false  # Set to true for development without auth

# Logging
LOG_LEVEL=INFO  # DEBUG for more verbose logging
